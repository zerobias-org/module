{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "ES5",
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "noLib": false,
        "allowJs": true,
        "declaration": true,
        "lib": ["es6", "es5"],
        "outDir": "dist",
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "generated/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
